@using Microsoft.AspNetCore.Components.Web
@namespace AWOMS.Zernest.Applications.UI.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <!-- The page supports both dark and light color schemes,
         and the page author prefers / default is dark. -->
    <meta name="color-scheme" content="dark light">

    <!-- Replace the Bootstrap CSS with the
         Bootstrap-Dark Variant CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet"> *@

    <!-- Superhero theme -->
    <link rel="stylesheet" href="css/bootstrap-superhero/bootstrap.min.css" />

    @* <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" /> *@
    <link href="css/site.css" rel="stylesheet" />
    @* <link href="AWOMS.Zernest.Applications.UI.Server.styles.css" rel="stylesheet" /> *@

    <!-- Optional Meta Theme Color is also supported on Safari and Chrome -->
    <meta name="theme-color" content="#eeeeee" media="(prefers-color-scheme: dark)">
    <meta name="theme-color" content="#111111" media="(prefers-color-scheme: light)">

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"
            integrity="sha512-QSkVNOCYLtj73J4hbmVoOV6KVZuMluZlioC+trLpewV8qMjsWqlIQvkn1KGX2StWvPMdWGBqim1xlC8krl1EKQ=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <script src="js/zernest/components/charts.js"></script>

    <script src="_framework/blazor.server.js"></script>

    <persist-component-state />
</body>

<!-- Footer -->
<footer class="bg-dark text-center text-lg-start text-white">
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
        Zernest <span class="text-muted">@string.Concat("v", typeof(Program).Assembly.GetName().Version)</span> © 2022-@DateTime.UtcNow.Year Copyright:
        <a class="text-white" href="https://www.awoms.com/">AWOMS.com</a>
    </div>
    <!-- Copyright -->
</footer>
<!-- Footer -->

</html>